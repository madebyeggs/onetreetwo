* {
	box-sizing: border-box;
}

body {
    margin: 0;
    padding: 0;
	background-color:#000000;
	color:#ffffff;
}


.userInfo {position:absolute;left:25px!important;top:25px;}
.content {
    margin: 0 auto;
    width: 100%;
    max-width: 960px;
    padding: 0 15px;
}

h1 {
    margin: 60px 0;
    padding: 0;
    font-size: 50px;
    text-align: center;
}

h1, h2, h3, h4 {font-family: 'Josefin Sans', sans-serif;text-transform:uppercase;}

p {
    margin: 0 0 30px 0;
    font-size: 30px;
    line-height: 1.5;
}

a, a:hover {text-decoration:none;color:#ffffff;}

.fullscreen-bg {
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    overflow: hidden;
    z-index: -100;
}

.fullscreen-bg__video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}
.fixed {margin-left:-15px;}
.logo {width:90%;margin:35px 0% 0px 0%!important;}
.logo img {max-width:100%;}
.navFix {float:left;clear:both;}
.navigation {margin:-15px 0px 0px 0px;text-align:center;}
ul.navigation {list-style:none;display: inline-block;margin:-35px 0px 0px 0!important;width:90%;padding:0px;}
ul {list-style:none;}
li {font-size:20px;color:#ffffff;font-family: 'Josefin Sans', sans-serif;text-transform:uppercase;margin:6px 0px;}
.deviseStyling {margin-top:45px;}
.project {width:100%;}
.project img {max-width:100%;}
.info-wrapper {position:absolute;width:90%;bottom:6%;left:4%;background-color:rgba(0,0,0,0.8);padding:10px;display:none;}
h5 {font-family:"Josefin Sans", sans-serif;font-size:14px;margin:0px;}
.colour {color:#ffa500;}
hr.dots {
	margin:6px;
    border-top:1px dotted #fff;
}
.lazy img {width:100%;height:100%;}
.projects {margin-bottom:72px;}
.fixMargin {margin-left:-12px;}
.strapline {margin-bottom:80px;font-size:18px;}
.servicesTopLeft {border-bottom:1px dotted white;margin-right:12px;padding-bottom:6px;}
.servicesBottomLeft {margin:24px 24px 0px 0px;}
.servicesTopLeft ul li, .servicesTopRight ul li {font-family:"Slabo 27px", sans-serif;font-size:18px;letter-spacing:1px;text-transform:none;margin:0px;}
.servicesBottomLeft ul li {font-family:"Slabo 27px", sans-serif;font-size:14px;letter-spacing:1px;text-transform:none;margin:0px;}
.servicesTopRight {border-bottom:1px dotted white;margin:0px 12px 0px 6px;padding-bottom:6px;}
.serviceBottomRight {margin:24px 0px 0px 6px;}
.address, .servicesList {margin-left:-40px;}
.contact {border-left:1px dotted white;}
.quote, .quote2 {font-family:"Slabo 27px", sans-serif;font-size:18px;margin:0px 14px -10px 0px;}
.quote2 {margin:0px 0px 24px 0px;font-size:18px;}

.titles {font-size:18px;}

.cmsTable {margin:36px;}


@media (min-aspect-ratio: 16/9) {
    .fullscreen-bg__video {
        height: 300%;
        top: -100%;
    }
}

@media (max-aspect-ratio: 16/9) {
    .fullscreen-bg__video {
        width: 300%;
        left: -100%;
    }
}

@media (max-width: 767px) {
    .fullscreen-bg {
        background: url(<%= asset_path 'cycling.jpg' %>) center center / cover no-repeat;
    }

    .fullscreen-bg__video {
        display: none;
    }
}
